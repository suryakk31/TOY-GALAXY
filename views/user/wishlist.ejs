<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home Page</title>
  <link rel="stylesheet" href="/css/user/wishlist.css">
  
  <!-- Boxicons -->
  <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="https://unpkg.com/ionicons@5.1.2/dist/ionicons.js"></script>
  <style>
  

  </style>
</head>
<body>


  <%- include('../partials/header') %>
 



  <section class="wishlist-products">
    <% if (wishlistItems.length > 0) { %>
      <% wishlistItems.forEach(product => { %>
        <div class="product">
          <div class="product-image-container">
            <a href="/auth/product/<%= product._id %>">
              <% if (product.image && product.image.length > 0) { %>
                <img src="<%= product.image[0] %>" alt="Product Image" class="product-image">
              <% } else { %>
                No Image
              <% } %>
            </a>
            <i class="bx bx-heart heart-icon"></i>
          </div>
          <h3><a href="/product/<%= product._id %>"><%= product.name %></a></h3>
          <p>â‚¹<%= product.price %> (<%= product.discount %>% off)</p>
          <p><%= product.description %></p>
        </div>
      <% }); %>
    <% } else { %>
      <p>Your wishlist is empty.</p>
    <% } %>
  </section>
  


<%- include('../partials/footer') %>


</body>
</html>
