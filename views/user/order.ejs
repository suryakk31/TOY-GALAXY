<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order</title>
    <link rel="stylesheet" href="/css/user/order.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <style>
@keyframes pulse {
  0% {
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1), 0 0 0 0 rgba(52, 152, 219, 0.4);
  }
  70% {
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1), 0 0 0 10px rgba(52, 152, 219, 0);
  }
  100% {
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1), 0 0 0 0 rgba(52, 152, 219, 0);
  }
}

.order-item {
  background-color: white;
  margin: 10px;
 
 
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 4px 8px #FF9933;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  border: 2px solid transparent;
}

.order-item:hover {
  transform: translateY(-5px) scale(1.02);
  border-color: #FF9933;
  background-color: #f8f9fa;
  animation: pulse 1.5s infinite;
}
      .order-item img {
          width: 100px;
          height: 100px;
          object-fit: cover;
          border-radius: 10px;
      }

      .order-details {
          flex: 1;
          margin-left: 20px;
      }

      .order-details h2 {
          margin: 0;
          font-size: 18px;
          color: #333;
      }

      .order-details p {
          margin: 5px 0;
          color: #666;
      }

      .order-item .order-status {
          text-align: right;
      }

      .order-item .order-status .status {
          font-weight: bold;
      }

      .order-item .order-status .status.delivered {
          color: green;
      }

      .order-item .order-status .status.cancelled {
          color: red;
      }
    </style>

<style>
  .pagination {
    display: flex;
    justify-content: center;
    margin: 50px 0;
  }

  .pagination a {
    display: inline-block;
    padding: 10px 15px;
    margin: 0 5px;
    text-decoration: none;
    color: #007bff;
    border: 1px solid #007bff;
    border-radius: 4px;
    font-size: 14px;
  }

  .pagination a.active {
    background-color: #007bff;
    color: white;
    border: 1px solid #007bff;
  }

  .pagination a:hover {
    background-color: #e9ecef;
  }

  .pagination a:focus {
    outline: none;
    box-shadow: 0 0 0 0.2rem rgba(38, 143, 255, 0.5);
  }
</style>

</head>
<body>
    
  <%- include('../partials/header') %>


  <div class="profile-container">
    <div class="profile-header">
      <h2>Hello, <%= userDatabase.firstName %></h2>
    </div>
    
    <nav class="profile-nav">
      <ul>
        <li><a href="/auth/profile" >Profile</a></li>
        <li><a href="/auth/addresses">Addresses</a></li>
        <li><a href="/auth/order" class="active">Orders</a></li>
        <li><a href="/auth/wallet">Wallet</a></li>
        <li><a href="/auth/coupon">Coupons</a></li>
        <li><a href="/auth/wishlist">Wishlist</a></li>
        <li><a href="/auth/reviewsRatings">Reviews</a></li>
        <li><a href="/auth/changePassword">Password</a></li>
      </ul>
    </nav>

    <% if (orders.length > 0) { %>
      <% orders.forEach(order => { %>
        <% order.items.forEach(item => { %>
          <div class="order-item" data-order-id="<%= order._id %>">
            <img src="<%= item.productImage[0] %>" alt="Product Image">
            <div class="order-details">
              <h2><%= item.productName %></h2>
              <p><strong>Description:</strong> <%= item.productDescription %></p>
              <p><strong>Quantity:</strong> <%= item.quantity %></p>
              <p><strong>Total Price:</strong> â‚¹<%= order.totalPrice.toFixed(2) %></p>
            </div>
        
          </div>
        <% }) %>
      <% }) %>
    <% } else { %>
      <p>No orders found.</p>
    <% } %>
    

  </div>
 
  <% if (totalPages > 1) { %>
    <div class="pagination">
      <% if (currentPage > 1) { %>
        <a href="?page=<%= currentPage - 1 %>">Previous</a>
      <% } %>
    
      <% for (let i = 1; i <= totalPages; i++) { %>
        <a href="?page=<%= i %>" class="<%= i === currentPage ? 'active' : '' %>"><%= i %></a>
      <% } %>
    
      <% if (currentPage < totalPages) { %>
        <a href="?page=<%= currentPage + 1 %>">Next</a>
      <% } %>
    </div>
  <% } %>
  

  <%- include('../partials/footer') %>

  <script>



    document.querySelectorAll('.order-item').forEach(item => {
        item.addEventListener('click', function() {
            const orderId = this.getAttribute('data-order-id');
            window.location.href = `/auth/orderDetails/${orderId}`;
        });
    });
  </script>
</body>
</html>
