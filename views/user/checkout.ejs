            <p>Your cart is empty.</p>
        <% } else { %>
            <% cartItems.forEach(item => { %>
                <div class="order-item" style="display: flex; justify-content: space-between; margin-bottom: 15px;">
                    <div class="order-item-image" style="flex: 1;">
