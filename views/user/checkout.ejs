    <style>
        /* Basic styles for the checkout page */
        .container { width: 90%; margin: 0 auto; }
        .header, .footer { text-align: center; margin: 20px 0; }
        .main-content { display: flex; justify-content: space-between; }
        .checkout-section { width: 70%; }
        .btn-primary3 { background-color: #9D51FF; color: white; padding: 10px 20px; border: none; cursor: pointer; margin-top: 10px; margin-left: 80px; }
        .section { border: 1px solid #ddd; margin-bottom: 10px; padding: 15px; border-radius: 5px; }
        .section-header { display: flex; justify-content: space-between; align-items: center; }
        .step-content { display: none; } /* Initially hide all sections */
        .step-content.active { display: block; } /* Show the active section */
        .btn-primary { background-color: #9D51FF; color: white; padding: 10px 20px; border: none; cursor: pointer; margin-top: 10px; text-decoration: none;}
        .btn-primary1 { background-color: #9D51FF; color: white; padding: 10px 20px; border: none; cursor: pointer; margin-top: 10px; }
        .savings { color: green; font-weight: bold; }
        .change-link { font-size: 14px; color: #9D51FF; cursor: pointer; text-decoration: underline; }
        .address-form { display: none; } /* Initially hide the address form */
    </style>
</head>
<body>
   
